@using EntityLayer.Concrete
@model List<Product>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Eklenen Ürünler</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ProductImage" class="mr-2" alt="image">
                                    </td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                    </td>
                                    <td> @(((DateTime)item.ProductCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    <td>
                                        <a href="/Product/ProductReadAll/@item.ProductID" class="btn btn-dark">Detaylar</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>