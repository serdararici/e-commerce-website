@model EntityLayer.Concrete.Brand
@{
    ViewData["Title"] = "BrandEditProfile";
    Layout = "~/Views/Shared/BrandLayout.cshtml";
}


@using(Html.BeginForm("BrandEditProfile", "Brand", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Marka Profil Bilgileri Düzenleme</h4>
                <br>
                @Html.HiddenFor(x=>x.MarkaID, new { @class = "form-control"})
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Marka İsmi</label>
                        @Html.TextBoxFor(x=>x.MarkaName, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi </label>
                        @Html.TextBoxFor(x=>x.MarkaMail, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x=>x.MarkaPassword, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Marka Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Marka Hakkında</label>
                        @Html.TextAreaFor(x=>x.MarkaDescription, 10, 3, new { @class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
                </form>
            </div>
        </div>
    </div>
}