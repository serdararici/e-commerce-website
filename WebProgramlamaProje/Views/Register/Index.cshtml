@model EntityLayer.Concrete.Brand
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using(Html.BeginForm("Index","Register", FormMethod.Post)) 
				{
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Adınız Soyadınız</label>
							@Html.TextBoxFor(x=>x.MarkaName, new{@class = "form-control"})
							@Html.ValidationMessageFor(x=>x.MarkaName, "",new{@class = "text-danger"})
							@*<input type="text" class="form-control" id="validationDefault01" name="MarkaName" placeholder="" required="">*@
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Mail Adresi</label>
							@Html.TextBoxFor(x=>x.MarkaMail, new{@class = "form-control"})
							@Html.ValidationMessageFor(x=>x.MarkaMail, "",new{@class = "text-danger"})
							@*<input type="email" class="form-control" name="MarkaMail" id="validationDefault02" placeholder="" required="">*@
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							@Html.TextBoxFor(x=>x.MarkaPassword, new{@class = "form-control"})
							@Html.ValidationMessageFor(x=>x.MarkaPassword, "",new{@class = "text-danger"})
							@*<input type="password" class="form-control" name="MarkaPassword" id="password1" placeholder="" required="">*@
						</div>
						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
							@Html.TextBoxFor(x=>x.MarkaLogo, new{@class = "form-control"})
							@Html.ValidationMessageFor(x=>x.MarkaLogo, "",new{@class = "text-danger"})
							@*<input type="text" class="form-control" name="MarkaLogo" id="password2" placeholder="" required="">*@
						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
					</p>
				}

			</div>
		</div>
	</div>
	<br /> 
	<script>
		$('#btn1').click(function () {
			swal("Site Kabul Şartları","Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber epstaları spam ölçüsüne varmadan gönderilmeye devam edilecekir. Eğer e-posta bülteninden çıkmak isterseniz mail ileti dizisini durdurabilirsiniz, şifre ve mail adresleriniz şifrelenmiş formatta herhangi bir kullanıcının görmeyeceği bir şekilde veri tabanlarımızda saklanmaktadır.");
		});
	</script>
</section>

